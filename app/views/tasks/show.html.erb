<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%= @task.completed %></p>

<%= link_to "Delete #{ @task.title }",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" }  %>
<br>

<%= link_to "Edit", edit_task_path(@task) %>

<br>

<%= link_to "Back to all tasks", tasks_path %>
